mixin videoPlayer(video = {})
    .video-player#jsVideoPlayer
        video#jsVideo(src=video.src)
        .video-player__controls
            .video-player__column
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    |/   
                    span#totalTime 00:00:00
                input.video-player__volume#jsVolume(type="range", min="0", max="1", step="0.1")
            .video-player__column
                span#jsPlayButton
                    i.fas.fa-play
            .video-player__column
                span#jsFullScreen
                    i.fas.fa-expand
